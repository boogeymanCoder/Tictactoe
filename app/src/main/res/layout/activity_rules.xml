<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".RulesActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150sp"
        android:layout_height="150dp"
        android:layout_marginBottom="40sp"
        app:srcCompat="@drawable/tic_tac_toe" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The object of Tic Tac Toe is to get three in a row."
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You play on a three by three game board."
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The first player is known as X and the second is O."
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players alternate placing Xs and Os on the game board until either oppent has three in a row or all nine squares are filled."
        android:textAlignment="textStart"
        android:textSize="20sp" />

</LinearLayout>